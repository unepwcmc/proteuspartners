<%= form_for [refinery, :partners_admin, @partner] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @partner,
              :include_object_name => true %>

  <div class="field">
    <%= f.label :icon_image, "Partner logo" %>
    <p>Use Jpeg or PNG</p>
    <%= render :partial => "/refinery/admin/image_picker", :locals => {
      :f => f,
      :field => :icon_image_id,
      :image => f.object.icon_image,
      :toggle_image_display => false
    }
    %>
  </div>

  <div class='field'>
    <%= f.label :title, "Partner name" -%>
    <%= f.text_field :title -%>
  </div>

  <div class='field'>
    <%= f.label :url, "Partner website link" -%>
    <p>Use format: http://www.link.com</p>
    <%= f.text_field :url -%>
  </div>

  <div class='field'>
    <%= f.label :username -%>
    <%= f.text_field :username -%>
  </div>

  <div class='field'>
    <%= f.label :password -%>
    <%= f.password_field :password -%>
  </div>

  <div class='field'>
    <%= f.label :password_confirmation -%>
    <%= f.password_field :password_confirmation -%>
  </div>

  <div class="field">
    <%= f.label :show_in_footer, "Show Partner In Footer" %>
    <%= f.check_box :show_in_footer %>
  </div>

  <h2>Logo width</h2>

  <p>As standard, logo sits at 40% width (ie with 4:4 aspect ratio - see BP logo for example)</p>

  <p>Check tickboxes below to change the logo width</p>

  <div class="field">
    <%= f.label :large_logo, "ie Barrick logo - 4:2 aspect ratio" %>
    <%= f.check_box :large_logo %>
  </div>

  <div class="field">
    <%= f.label :smal_logo, "ie Anglo American logo - 4:1 aspect ratio" %>
    <%= f.check_box :smal_logo %>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.partners.admin.partners.partner'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @partner.title) -%>
<% end -%>
